contract Counter{
    uint256 public num; // public 表示内部和外部都可以读取这个值

    constructor(){
        num = 1;
    }
    function current() external view  returns (uint256){
        return num;
    }
    function increment() external returns (uint256){ // 外部可视，合约内部的其他函数不能读取
                                            // 这是一个写入方法（对状态变量更改），所以不能有 view 或 pure，否则不能更改，会冲突
        return num += 1;
    }
    function sub() external  returns (uint256){ // 这是一个写入方法，所以不能有 view 或 pure
        if(num == 0){ // 检查变量是否等于零，由于 uint 不能为负数，如果为零再减一会报错
            return 0;
        }
        return num -= 1;
    }
}